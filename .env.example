# Backend secrets/config (DO NOT COMMIT .env)

# UI login password
PASSWORD=

# Dajiala API key
DAJIALA_KEY=

# MySQL
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=test

# Optional: MySQL connect timeout (seconds)
MYSQL_TIMEOUT=5

# Optional: MySQL read/write timeouts (seconds)
# If not set, falls back to MYSQL_TIMEOUT
MYSQL_READ_TIMEOUT=20
MYSQL_WRITE_TIMEOUT=20

# DeepSeek (for sector extraction)
DEEPSEEK_API_KEY=
# Optional overrides
# DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
# DEEPSEEK_MODEL=deepseek-chat

# Sector generation tuning (optional)
# Limit number of articles used per run
SECTOR_MAX_ARTICLES=30
# Parallelism for fetching article pages
SECTOR_FETCH_CONCURRENCY=8
# Max chars kept per article for LLM prompt (smaller = faster/cheaper)
SECTOR_ARTICLE_MAX_CHARS=2000

# Optional: candidate industry board list cache TTL (seconds)
# 21600 = 6 hours
SECTOR_INDUSTRY_CACHE_TTL=21600

# Optional: cap candidate sector names passed into LLM prompt
SECTOR_CANDIDATE_MAX=300

# Optional: CORS origins for /api/*
# - "*" to allow all
# - comma-separated list, e.g. "http://localhost:5173,http://127.0.0.1:5173"
# CORS_ALLOW_ORIGINS=

# API server binding
API_HOST=0.0.0.0
API_PORT=8001
API_DEBUG=1
